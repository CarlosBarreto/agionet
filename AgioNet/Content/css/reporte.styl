#rp_main
	display: block
	font-size:1.2em
	height: 100%
	position: relative
	width: 100%

	#rp_main-nav
		display: inline-block
		height: 22px
		margin-bottom: 10px
		margin-top: 10px
		padding: 2px
		width: 100%

		ul
			list-style-type: none
			text-align: center

		li
			display: inline-block
			float:left
			margin: 0 10px 0 0
			text-align: center
			text-shadow: 0 1px transparent, 0 1px white, 1px 0 transparent, 0 -1px transparent

		li a
			background-color: #EEE
			border: 1px solid #CCC
			color: #666;
			padding: 2px 7px 2px 7px
			text-decoration: none;

		li a:hover
			background-color: #333 
			color: #FFF
			
	#rp_left 
		display: inline-block
		float: left
		height: 100%
		margin-top: 10px
		width: 75%

	.title
		border-bottom:1px dashed #CCC
		color: #333
		display: block
		font-size: 1.3em
		font-weight: bold
		width: 100%

	.separador
		border-bottom:2px dashed #CCC
		color: #333
		display: block
		font-size: 1.3em
		font-weight: bold
		width: 100%

	.rp_left-contenedor
		border:1px solid #CCC
		font-size: 0.9em
		padding:3px 7px 3px 7px
		width: 100%

		.title
			border-bottom:1px dashed #CCC
			color: #333
			display: block
			font-size: 1.1em
			font-weight: bold
			width: 100%

		.row, .row-textarea
			display: inline-block
			height: 35px

		.row-textarea
			height: 70px
			vertical-align: center

		INPUT[type=text], SELECT
			font-family Arial
			font-size 2 em

		.Label
			font-family: BebasNeue, HelveticaBlackCondensed, sans-serif, Arial
			font-size: 2.5 em
			height: 45px

		.error
			color: #F00
			font-family: sans-serif, Arial
			font-size: 1 em
			font-weight: bold
			margin-left: 5px

	#rp_right
		display: block
		float: right
		font-size: 1 em
		height: 100%
		margin-top: 10px
		width: 23%

	.rp_right-contenedor
		border:1px solid #CCC
		font-size: 0.8em
		padding:3px 7px 3px 7px
		width: 100%

		.title
			border-bottom:1px dashed #CCC
			color: #333
			display: block
			font-size: 1.1em
			font-weight: bold
			width: 100%